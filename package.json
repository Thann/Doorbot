{
  "name": "doorbot",
  "version": "0.0.1",
  "description": "Simple door opener and user managment system",
  "repository": {
    "type": "git",
    "url": "https://github.com/Thann/Doorbot.git"
  },
  "bin": "server.js",
  "license": "AGPL-3.0+",
  "scripts": {
    "start": "node server --build",
    "test": "mocha",
    "lint": "eslint .",
    "dkstart": "docker-compose up -d",
