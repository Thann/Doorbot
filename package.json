    "style-loader": "^0.19.1",
    "webpack": "^3.12.0",
    "ws": "^5.2.1"
  },
  "devDependencies": {
    "mocha": "^5.2.0",
    "supertest": "github:thann/supertest"
  },
  "eslintIgnore": [
    "**/*.js",
    "!api/",
    "!lib/",
    "!test/",
    "!webapp/",
    "!server.js",
