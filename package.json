    "@fortawesome/free-regular-svg-icons": "^5.9.0",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "backbone": "^1.4.0",
    "backbone-subviews": "github:thann/backbone.subviews",
    "backbone.localstorage": "^1.1.16",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^1.1.12",
    "cookie": "^0.3.1",
    "css-loader": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "jquery": "^3.4.1",
    "luxon": "^1.16.0",
    "node-getopt": "^0.3.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "popper.js": "^1.15.0",
    "querystring": "^0.2.0",
    "rivets": "github:blikblum/rivets#971a83581611d125bb78f10a822d20b67b8d2b88",
    "rivets-backbone-adapter": "^2.2.0",
    "rpi-gpio": "^2.0.0",
    "sass-loader": "^7.1.0",
    "sqlite": "^3.0.3",
    "style-loader": "^0.19.1",
    "webpack": "^4.33.0",
    "ws": "^5.2.2"
  },
  "devDependencies": {
    "mocha": "^5.2.0",
    "supertest": "github:thann/supertest",
    "webpack-cli": "^3.3.4"
  },
  "eslintIgnore": [
    "**/*.js",
    "!api/*.js",
    "!lib/*.js",
    "!test/*.js",
    "!webapp/**/*.js",
    "!server.js",
    "!door.js",
    "!webpack.config.js"
  ]
