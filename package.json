    "backbone.localstorage": "^1.1.16",
    "body-parser": "^1.18.3",
    "bootstrap": "^3.3.6",
    "compression-webpack-plugin": "^1.1.11",
    "cookie": "^0.3.1",
    "css-loader": "^0.28.11",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "express": "^4.16.3",
    "express-ws": "^4.0.0",
    "font-awesome": "^4.5.0",
    "hanson": "^1.1.1",
    "hson-loader": "^2.0.0",
    "imports-loader": "^0.8.0",
